<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ustc.dao.UserDao">

    <!--新增用户实现用户注册-->
    <insert id="saveUser" parameterType="User">
        insert into user values (#{id},#{username},#{password},#{mail},#{phoneNumber},#{type})
    </insert>

    <!--实现用户登录-->
    <select id="findUser" parameterType="UserVo" resultType="User">
        select id,username,password,mail,phoneNumber,type
        from user
        where username = #{username}
    </select>
</mapper>